<form action="/api/users/recovery" method="POST" class="container text-center text-secondary-emphasis col-6 mt-4 rounded">
    <h2>Recupera tu constraseña</h2>
    <h5>Ingrese el correo electronico de su cuenta</h5>
    
    <!-- INPUTS -->
    <section class="container mt-4 col-8">
        <!-- EMAIL -->
        <label for="email" class="form-label">Email:</label>
        <input type="email" id="email" name="email" class="form-control" required><br>

    </section>
    
    <!-- BUTTONS -->
    <section class="mt-4">
        <p></p>
        <button type="submit" class="btn btn-primary">Enviar link de recuperación</button>
    </section>

</form>