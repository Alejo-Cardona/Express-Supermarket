<h1 class="text-center mt-4 mb-4">Crea un producto para vender</h1>
<form action="/api/products/create" method="POST" enctype="multipart/form-data" class="container text-center text-secondary-emphasis col-6 mt-4 mb-4 rounded">
    
    <!-- INPUTS NAME -->
    <section class="row">
        <!-- Title -->
        <div class="col-4 ms-5">
            <label for="title" class="form-label">Titulo:</label>
            <input type="text" id="title" name="title" class="form-control" required><br>
        </div>
        <!-- PRICE -->
        <div class="col-4">
            <label for="price" class="form-label">precio:</label>
            <input type="number" id="price" name="price" class="form-control" required><br>
        </div>
        <!-- STOCK -->
        <div class="col-2">
            <label for="stock" class="form-label">Stock:</label>
            <input type="number" id="stock" name="stock" class="form-control" required><br>
        </div>
    </section>

    <section class="container mt-4 col-8">
        <!-- DESCRIPTION -->
        <label for="description" class="form-label">Descripción:</label>
        <input type="text" id="description" name="description" class="form-control" required><br>

        <!-- CATEGORY -->
        <div class="btn-group col-12 mb-4 p-3">
            <button type="button" class="btn btn-secondary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                <span class="d-none d-md-inline">Seleccioná una categoria</span>
            </button>
            <ul class="dropdown-menu">
                <li><a class="dropdown-item" data-value="télefonos">Teléfonos</a></li>
                <li><a class="dropdown-item" data-value="Artículos-de-limpieza">Artículos de limpieza</a></li>
                <li><hr class="dropdown-divider"></li>
                <li><a class="dropdown-item" data-value="Golosinas">Golosinas, alfajores y chocolates</a></li>
                <li><a class="dropdown-item" data-value="Panificados-cereales">Panificados y cereales</a></li>
                <li><a class="dropdown-item" data-value="Frutas-verduras">Frutas y verduras</a></li>
                <li><a class="dropdown-item" data-value="Quesos">Quesos untables y ricotas</a></li>
                <li><hr class="dropdown-divider"></li>
                <li><a class="dropdown-item" data-value="Bebidas">Bebidas</a></li>
                <li><a class="dropdown-item" data-value="Lácteos">Lácteos</a></li>
                <li><a class="dropdown-item" data-value="Vinos">Vinos</a></li>
            </ul>
        </div>

        <!-- Campo oculto para almacenar el valor seleccionado -->
        <input type="hidden" id="category" name="category">

        <div id="content-p"> 
        </div>

        <!-- IMAGE -->
        <label for="file" class="form-label">Carga una imagen:</label>
        <input type="file" name="product-images" class="form-control"><br>
    </section>
    
    <!-- BUTTONS -->
    <section class="mt-4">
        <button type="submit" class="btn btn-primary">Crear producto</button>
    </section>

</form>

<script src="/js/formProduct.js"></script>